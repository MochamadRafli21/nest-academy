// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Options {
  id          Int        @id @default(autoincrement())
  value       String
  Questions   Questions? @relation(fields: [questionsId], references: [id])
  questionsId Int?
}

model Quiz {
  id                 Int                  @id @default(autoincrement())
  name               String
  question           Questions[]
  Sessions_Materials Sessions_Materials[]
}

model Questions {
  id       Int       @id @default(autoincrement())
  title    String
  question String
  options  Options[]
  answer   String
  Quiz     Quiz?     @relation(fields: [quizId], references: [id])
  quizId   Int?
}

model Materials {
  id                 Int                  @id @default(autoincrement())
  video_url          String
  description        String
  Sessions_Materials Sessions_Materials[]
}

model Sessions {
  id    Int    @id @default(autoincrement())
  title String

  Sessions_Materials Sessions_Materials[]
}

model Sessions_Materials {
  id          Int        @id @default(autoincrement())
  session     Sessions   @relation(fields: [sessionsId], references: [id])
  materials   Materials? @relation(fields: [materialsId], references: [id])
  quiz        Quiz?      @relation(fields: [quizId], references: [id])
  quizId      Int
  sessionId   Int
  materialsId Int
  positions   Int
  sessionsId  Int
}
